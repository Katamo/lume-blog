---
layout: layouts/base.njk
bodyClass: body-changelog
---
<article class="changelog">
  <header class="changelog-header">
    <h1 class="changelog-title">{{ title }}
      <time class="" datetime="{{ date | date('DATETIME') }}">
        -({{ date | date('DATE') }})
      </time>
    </h1>

  <div class="changelog-body">
    {{ content | safe }}
  </div>
</article>

